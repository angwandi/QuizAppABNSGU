<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="levels_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/sp_36</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="check_right_answers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="enter_your_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="welcome_and_quiz_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/sp_36</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="levels_linearLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#4caf50</item>
    </style>

    <style name="questions_answers_linearLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dp_14</item>
    </style>

    <style name="questions_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="basic_answers_checkBoxes_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_24</item>
    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_24</item>
    </style>

    <style name="editText_advanced_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginLeft">@dimen/dp_24</item>
    </style>

    <style name="images_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
